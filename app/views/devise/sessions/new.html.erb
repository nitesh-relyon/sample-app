<div class="col-lg-4 col-md-4 col-sm-4 container justify-content-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-outline mb-4">
      <h2 align="center">Log in</h2>
    </div>
    <div class="form-outline mb-4">
      <%= f.email_field :email, autofocus: true, required: true, autocomplete: "off", class: "form-control", placeholder: "Email Address" %>
    </div>

    <div class="form-outline mb-4">
      <%= f.password_field :password, autocomplete: "off", required: true, class: "form-control", placeholder: "Password" %>
    </div>
    <div class="form-outline mb-4">
      <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "form-check-label" %>
      <% end %>
    </div>

    <div class="form-outline mb-4">
      <%= f.submit "Log in", class: "btn btn-outline-primary btn-block mb-4" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>